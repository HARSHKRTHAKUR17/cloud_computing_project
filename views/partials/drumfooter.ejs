<script>
    
for(var i=0; i<document.querySelectorAll(".drum").length; i++)
{
    document.querySelectorAll(".drum")[i].addEventListener("click" , function ()
    {
       var buttonInnerHtml = this.innerHTML;
       makeSound(buttonInnerHtml);
       addAnimation(buttonInnerHtml);
    });

}

document.addEventListener("keydown" , function(event){

    makeSound(event.key);
    addAnimation(event.key);


});

function makeSound(key)
{
    switch (key) {
        case "w":
            var crash = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/crash.mp3');
            crash.play();
            break;

        case "a":
            var kick = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/kick-bass.mp3');
            kick.play();
            
            break;

        case "s":
            var snare = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/snare.mp3');
            snare.play();
            break;

        case "d":
            var tom1 = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/tom-1.mp3');
            tom1.play();
            break;

        case "j":
            var tom2 = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/tom-2.mp3');
            tom2.play();
            break;

        case "k":
            var tom3 = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/tom-3.mp3');
            tom3.play();
            break;
        
        case "l":
            var tom4 = new Audio('https://d2gxe8vdo0u8nf.cloudfront.net/tom-4.mp3');
            tom4.play();
            break;
       
        default:
            console.log(buttonInnerHtml)
            break;
    }
}

function addAnimation(event)
{
    var activeButton = document.querySelector("."+event);

    activeButton.classList.add("pressed");

    setTimeout(function()
    {
        activeButton.classList.remove("pressed");
    } , 100);
}

</script>css/
